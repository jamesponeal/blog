<h1>
  <%= @post.title %>
</h1>
<div class="blog-container">
  <div class="standard-text">
    <%= @post.content %>
  </div>
  <div class="mar-t-1">
    <% if logged_in? %>
      <% if current_user.admin %>
        <%= link_to 'Edit Post', edit_post_path(@post) %>
      <% end %>
    <% end %>
  </div>
</div>


<% if logged_in? %>
  <div class="comment-link mar-l-3">
    <%= link_to 'Add Comment', new_post_comment_path(@post), remote: true %>
  </div>
  <div id="append-comment-form"></div>
<% else %>
  <p>Create an account or login to add a comment.</p>
<% end %>

<% if @comments %>
  <ul>
    <% @comments.reverse.each do |comment| %>
      <li class="standard-text mar-l-3">
        <%= comment.content %><br>
        by <%= comment_author_name(comment) %>
      </li>
    <% end %>
  </ul>
<% end %>
<script>
  $('.nav-link').removeClass('nav-highlight');
  $('.blog-link').addClass('nav-highlight');
</script>